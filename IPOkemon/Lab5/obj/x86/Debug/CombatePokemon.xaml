        <TextBlock x:ConnectionId='3' x:Name="tbTítuloMultijugador" HorizontalAlignment="Center" Margin="0,22,0,0" Text="Combate Multijugador" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="48" Foreground="White"/>
