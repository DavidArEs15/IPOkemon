        <local:MUCPinguino x:ConnectionId='14' x:Name="mucPiplup" HorizontalAlignment="Left" Margin="-524,191,0,0" VerticalAlignment="Top" Visibility="Collapsed"/>
        <local:MUCPokemonOso x:ConnectionId='15' x:Name="mucTeddiursa" HorizontalAlignment="Left" Margin="-554,191,0,0" VerticalAlignment="Top" Height="396" Visibility="Collapsed"/>
        <local:MUCCastform x:ConnectionId='16' x:Name="mucCastform" HorizontalAlignment="Left" Margin="-565,189,0,0" VerticalAlignment="Top" Height="340" Width="508" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='17' x:Name="tbSleccionarMultijugador2" HorizontalAlignment="Left" Margin="58,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="30"                                                  Text="Jugador 2 selecciona tu pokémon:" Foreground="White" Visibility="Collapsed" Height="Auto"/>
        <Image x:ConnectionId='18' x:Name="imgJugador1" HorizontalAlignment="Left" Height="100" Margin="798,566,0,0" VerticalAlignment="Top" Width="100" Source="/img/jugador1.png" Visibility="Collapsed" Opacity="0.75"/>
        <Image x:ConnectionId='19' x:Name="imgJugador2" HorizontalAlignment="Left" Height="100" Margin="208,566,0,0" VerticalAlignment="Top" Width="100" Source="/img/jugador2.png" Visibility="Collapsed" Opacity="0.75"/>
        <Button x:ConnectionId='20' x:Name="btnJugarMultijugador" Content="Jugar" Margin="331,343,0,0" VerticalAlignment="Top" Background="#FF7BE2DD" FontSize="25" FontWeight="Bold"                      Visibility="Collapsed" Height="121" Width="172"/>
        <Button x:ConnectionId='21' x:Name="btnSelecPokMultijugador" Content="  Volver a &#xD;&#xA;seleccionar" Margin="534,345,0,0" VerticalAlignment="Top" Background="#FF7BE2DD" FontSize="25" FontWeight="Bold"                           Visibility="Collapsed" Height="119" Width="195"/>
        <TextBlock x:ConnectionId='22' x:Name="tbEleccionMultijugador" HorizontalAlignment="Left" Margin="405,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="30" Foreground="White" Text="¿Qué desea hacer?" Visibility="Collapsed"/>
