        <TextBlock x:ConnectionId='25' x:Name="tbSleccionarMultijugadorIngles2" HorizontalAlignment="Left" Margin="58,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="30"                                                  Text="Player 2 select your pokemon:" Foreground="White" Visibility="Collapsed" Height="Auto"/>
        <TextBlock x:ConnectionId='26' x:Name="tbEleccionMultijugadorIngles" HorizontalAlignment="Left" Margin="342,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="30" Foreground="White" Text="¿What do you want to do?" Visibility="Collapsed"/>
