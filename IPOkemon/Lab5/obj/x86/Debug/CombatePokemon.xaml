        <Image x:ConnectionId='29' x:Name="ganaSableye" HorizontalAlignment="Left" Height="1123" VerticalAlignment="Top" Width="1143" Source="/imagenesSableye/ganaSableye.png" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Margin="0,0,0,0">
            <Image.RenderTransform>
                <CompositeTransform SkewY="0.075" TranslateY="0.749"/>
            </Image.RenderTransform>
        </Image>
        <Image x:ConnectionId='30' x:Name="ganaPiplup" HorizontalAlignment="Center" Height="1123" VerticalAlignment="Top" Width="1143" Source="/imagenesPinguino/ganaPiplup.JPG" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Image.RenderTransform>
                <CompositeTransform SkewY="0.075" TranslateY="0.749"/>
            </Image.RenderTransform>
        </Image>
        <Image x:ConnectionId='31' x:Name="ganaCastform" HorizontalAlignment="Center" Height="1123" VerticalAlignment="Top" Width="1143" Source="/imagenesCastform/ganaCastform.png" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Image.RenderTransform>
                <CompositeTransform SkewY="0.075" TranslateY="0.749"/>
            </Image.RenderTransform>
        </Image>
        <Image x:ConnectionId='32' x:Name="ganaOso" HorizontalAlignment="Center" Height="1123" VerticalAlignment="Top" Width="1143" Source="/imagenesOso/ganaOso.JPG" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Image.RenderTransform>
                <CompositeTransform SkewY="0.075" TranslateY="0.749"/>
            </Image.RenderTransform>
        </Image>
        <Button x:ConnectionId='33' x:Name="btnRepetir" Content="Combatir de nuevo" Margin="684,665,0,0" VerticalAlignment="Top"                          Background="#FF90D4D8" FontWeight="Bold" Visibility="Collapsed" BorderBrush="Black" Height="57" Width="342" FontSize="25"/>
        <Image x:ConnectionId='34' x:Name="imgAumentar" HorizontalAlignment="Left" Height="69" Margin="942,28,0,0" VerticalAlignment="Top" Width="67" Source="/img/imgAumentar.png"                                              />
        <Image x:ConnectionId='35' x:Name="imgDisminuir" HorizontalAlignment="Left" Height="72" Margin="942,16,0,0" VerticalAlignment="Top" Width="67" Source="/img/imgDisminuir.png" Visibility="Collapsed"                                               />

    </Grid>
</Page>

