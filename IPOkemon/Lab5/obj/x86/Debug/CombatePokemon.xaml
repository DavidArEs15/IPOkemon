        <TextBlock x:ConnectionId='11' x:Name="tbTeddiursa" HorizontalAlignment="Left" Margin="704,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="30" Foreground="White" Width="Auto" Height="Auto"><Run Text="Te"/><Run Text="d"/><Run Text="diursa"/></TextBlock>
